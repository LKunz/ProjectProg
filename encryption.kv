            font_size: 30
            bold: True
            on_release:
                app.root.current = "welcome"
                root.manager.transition.direction = "right"
    
<encryptwindow>:
    method: method
    
    
    FloatLayout:
    
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            id: choice
            pos_hint:{"x": 0.1, "top": 0.9}
            size_hint: 0.7, 0.2
            text: "Please select your favorite method"
            color: 143/255, 141/255, 142/255, 1
            bold: True
            font_size: 40
        
        Label:
            id: choice
            pos_hint:{"x": 0.1, "top": 0.9}
            size_hint: 0.7, 0.2
            text: "Please select your favorite method"
            color: 143/255, 141/255, 142/255, 1
            bold: True
            font_size: 40
        
        Button:
            id: method
            text: 'Select'
            color: 138/255,197/255,195/255, 1
            font_size: 30
            bold: True
            italic: True
            background_color : 0,0,0,0
            on_parent: dropdown.dismiss()
            on_release: dropdown.open(self)
            size_hint: 0.25, 0.1
            pos_hint: {"x":0.0, "y":0.55}
        
        DropDown:
            id: dropdown
            on_select: method.text = '{}'.format(args[1])
            
            Button:
                text: 'Caesar'
                size_hint_y: None
                color: 138/255,197/255,195/255, 1
                font_size: 30
                bold: True
                italic: True
                background_color : 237/255,236/255,232/255,0
                height: '48dp'
                on_release: 
                    dropdown.select('Caesar')
                    app.root.current = "caesar"
                    root.manager.transition.direction = "left"
                    
                
            Button:
                text: 'Substitution'
                size_hint_y: None
                color: 138/255,197/255,195/255, 1
                font_size: 30
                bold: True
                italic: True
                background_color : 237/255,236/255,232/255,0
                height: '48dp'
                on_release: 
                    dropdown.select('Substitution')
                    app.root.current = "substitution"
                    root.manager.transition.direction = "left"
            
            Button:
                text: 'Symmetric'
                size_hint_y: None
                color: 138/255,197/255,195/255, 1
                font_size: 30
                bold: True
                italic: True
                background_color : 237/255,236/255,232/255,0
                height: '48dp'
                on_release: 
                    dropdown.select('Symmetric')
                    app.root.current = "symmetric"
                    root.manager.transition.direction = "left"
            
            Button:
                text: 'RSA'
                size_hint_y: None
                color: 138/255,197/255,195/255, 1
                font_size: 30
                bold: True
                italic: True
                background_color : 237/255,236/255,232/255,0
                height: '48dp'
                on_release: 
                    dropdown.select('RSA')
                    app.root.current = "rsa"
                    root.manager.transition.direction = "left"
        
            
        Button:
            pos_hint:{"x":0.8, "y":0.0}
            size_hint:0.2,0.1
            background_color : 0,0,0,0
            text: "Return"
            color: 143/255, 141/255, 142/255, 1
