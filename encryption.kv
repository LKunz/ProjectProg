<welcomewindow>:
    welcome: welcome
    FloatLayout:
        canvas:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:

            id: welcome
            pos_hint:{"x": 0.1, "top": 0.9}
            size_hint: 0.8, 0.2
            text: "Welcome to the best encryption program"
            color: 143/255, 141/255, 142/255, 1
            bold: True
            font_size: 40
    
        Button:
            pos_hint:{"x":0, "y":0.6}
            size_hint: 0.3,0.2
            background_color : 0,0,0,0
            text: "Get Started!"
            color: 138/255,197/255,195/255, 1
            font_size: 30
            bold: True
            italic: True
            on_release:
                app.root.current = "choice"
                root.manager.transition.direction = "left"              
        
<choicewindow>:
    choice: choice
    
    FloatLayout:
    
        canvas:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: choice
            pos_hint:{"x": 0.1, "top": 0.9}
            size_hint: 0.5, 0.2
            text: "What would you like to do?"
            color: 143/255, 141/255, 142/255, 1
            bold: True
            font_size: 40
            
        Button:
            pos_hint:{"x":0, "y":0.55}
            size_hint: 0.47,0.2
            background_color : 0,0,0,0
            text: "Encrypt your message"
            color: 138/255,197/255,195/255, 1
            font_size: 30
            bold: True
            italic: True
            on_release:
                app.root.current = "encrypt"
                root.manager.transition.direction = "left"
        
        Button:
            pos_hint:{"x":0, "y":0.4}
            size_hint: 0.47,0.2
            background_color : 0,0,0,0
            text: "Decrypt your message"
            color: 138/255,197/255,195/255, 1
            font_size: 30
            bold: True
            italic: True
            on_release:
                app.root.current = "decrypt"
                root.manager.transition.direction = "right"
                
        Button:
